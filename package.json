{
	"name": "positron",
	"displayName": "Positron",
	"description": "Positron Language Support",
	"version": "1.7.4",
	"publisher": "atomix",
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.68.0"
	},
	"keywords": [
		"pic",
		"dspic",
		"pic24",
		"pic18",
		"pic16",
		"pic12",
		"microchip",
		"positron",
		"proton"
	],
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"activationEvents": [
		"onLanguage:pos",
		"onWebviewPanel:posweb_Settings",
		"onWebviewPanel:posweb_Programs",
		"onWebviewPanel:posweb_About",
		"onWebviewPanel:posweb_Custom"
	],
	"main": "./dist/extension",
	"contributes": {
		"commands": [
			{
				"command": "pos.runCompile",
				"title": "Compile",
				"icon": {
					"light": "./images/light/compile.svg",
					"dark": "./images/dark/compile.svg"
				}
			},
			{
				"command": "pos.runCombine",
				"title": "Compile and Program",
				"icon": {
					"light": "./images/light/combine.svg",
					"dark": "./images/dark/combine.svg"
				}
			},
			{
				"command": "pos.runProgram",
				"title": "Program",
				"icon": {
					"light": "./images/light/download.svg",
					"dark": "./images/dark/download.svg"
				}
			},
			{
				"command": "pos.save",
				"title": "Save",
				"icon": {
					"light": "./images/light/save.svg",
					"dark": "./images/dark/save.svg"
				}
			},
			{
				"command": "pos.save_all",
				"title": "Save All",
				"icon": {
					"light": "./images/light/save_all.svg",
					"dark": "./images/dark/save_all.svg"
				}
			},
			{
				"command": "pos.viewAsm",
				"title": "View Assembler"
			},
			{
				"command": "pos.viewLst",
				"title": "View Listing"
			},
			{
				"command": "pos.stopCompile",
				"title": "Stop Compile"
			},
			{
				"command": "pos.webSettings",
				"title": "Settings"
			},
			{
				"command": "pos.webPrograms",
				"title": "Programs"
			},
			{
				"command": "pos.webAbout",
				"title": "About"
			},
			{
				"command": "pos.helpPos8",
				"title": "Positron8 Compiler"
			},
			{
				"command": "pos.helpPos16",
				"title": "Positron16 Compiler"
			},
			{
				"command": "pos.helpPJS",
				"title": "PreprocessorJS"
			}
		],
		"keybindings": [
			{
				"command": "pos.runCompile",
				"key": "ctrl+alt+c"
			},
			{
				"command": "pos.runCombine",
				"key": "ctrl+alt+m"
			},
			{
				"command": "pos.runProgram",
				"key": "ctrl+alt+p"
			},
			{
				"command": "pos.viewAsm",
				"key": "ctrl+alt+a"
			},
			{
				"command": "pos.viewLst",
				"key": "ctrl+alt+l"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "resourceLangId == pos && config.pos.showCompileInContextMenu",
					"command": "pos.runCompile",
					"group": "navigation"
				},
				{
					"when": "resourceLangId == pos && config.pos.showCompileInContextMenu",
					"command": "pos.runCombine",
					"group": "navigation"
				},
				{
					"when": "resourceLangId == pos && config.pos.showCompileInContextMenu",
					"command": "pos.runProgram",
					"group": "navigation"
				},
				{
					"when": "resourceLangId == pos && config.pos.showViewInContextMenu",
					"command": "pos.viewAsm",
					"group": "navigation"
				},
				{
					"when": "resourceLangId == pos && config.pos.showViewInContextMenu",
					"command": "pos.viewLst",
					"group": "navigation"
				}
			],
			"editor/title": [
				{
					"when": "resourceLangId == pos && config.pos.showSaveIconsInTitleMenu",
					"command": "pos.save",
					"group": "navigation@1"
				},
				{
					"when": "resourceLangId == pos && config.pos.showSaveIconsInTitleMenu",
					"command": "pos.save_all",
					"group": "navigation@1"
				},
				{
					"when": "resourceLangId == pos && config.pos.showMainIconsInTitleMenu",
					"command": "pos.runCompile",
					"group": "navigation@2"
				},
				{
					"when": "resourceLangId == pos && config.pos.showMainIconsInTitleMenu",
					"command": "pos.runCombine",
					"group": "navigation@2"
				},
				{
					"when": "resourceLangId == pos && config.pos.showMainIconsInTitleMenu",
					"command": "pos.runProgram",
					"group": "navigation@2"
				},
				{
					"when": "resourceLangId == pos && config.pos.showMainIconsInTitleMenu",
					"submenu": "pos.positron",
					"group": "navigation@3"
				}
			],
			"pos.positron": [
				{
					"command": "pos.webSettings",
					"group": "positron@1"
				},
				{
					"command": "pos.webPrograms",
					"group": "positron@2"
				},
				{
					"command": "pos.webAbout",
					"group": "positron@8"
				},
				{
					"submenu": "pos.help",
					"group": "positron@9"
				}
			],
			"pos.help": [
				{
					"command": "pos.helpPos8",
					"group": "helpPos@1"
				},
				{
					"command": "pos.helpPos16",
					"group": "helpPos@2"
				},
				{
					"command": "pos.helpPJS",
					"group": "helpPre@1"
				}
			]
		},
		"submenus": [
			{
				"id": "pos.positron",
				"label": "Positron",
				"icon": {
					"light": "./images/light/settings.svg",
					"dark": "./images/dark/settings.svg"
				}
			},
			{
				"id": "pos.help",
				"label": "Help"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Positron",
			"properties": {
				"pos.main.compiler": {
					"type": "string",
					"default": "C:\\Program Files (x86)\\ProtonIDE\\PDS\\Loader.exe",
					"description": "Path to loader for positron compiler"
				},
				"pos.main.programmer": {
					"type": "string",
					"default": "C:\\Program Files (x86)\\Microchip\\Pickit 2 v2\\pk2cmd.exe",
					"description": "Path to programmer for program Flash-based PICÂ® Microcontroller Units"
				},
				"pos.main.programmerArgs": {
					"type": "string",
					"default": "-L1 -H1 -R -J -E -M -PPIC$target-device$ -F\"$hex-filename$\" -B\"$exe-path$\"",
					"description": "Arguments for programmer"
				},
				"pos.output.ClickHide": {
					"type": "boolean",
					"default": false,
					"description": "Hide the panel (output, terminal, etc.) when the user clicks into a text editor."
				},
				"pos.output.DelayHide": {
					"type": "number",
					"default": 0,
					"description": "How long to wait (ms.) before hiding the panel."
				},
				"pos.timeout.AutoFormat": {
					"type": "number",
					"default": 800,
					"description": "How long to wait (ms.) before auto-formatting text. (The value 0 disables this feature)"
				},
				"pos.showCompileInContextMenu": {
					"type": "boolean",
					"default": true,
					"description": "Whether to show items (Compile, Program) in editor context menu.",
					"scope": "resource"
				},
				"pos.showViewInContextMenu": {
					"type": "boolean",
					"default": true,
					"description": "Whether to show items (View Asm, View Lst) in editor context menu.",
					"scope": "resource"
				},
				"pos.showSaveIconsInTitleMenu": {
					"type": "boolean",
					"default": false,
					"description": "Whether to show save icons in editor title menu.",
					"scope": "resource"
				},
				"pos.showMainIconsInTitleMenu": {
					"type": "boolean",
					"default": true,
					"description": "Whether to show main icons in editor title menu.",
					"scope": "resource"
				},
				"pos.saveAllFilesBeforeRun": {
					"type": "boolean",
					"default": true,
					"description": "Whether to save all files before running.",
					"scope": "resource"
				},
				"pos.saveFileBeforeRun": {
					"type": "boolean",
					"default": true,
					"description": "Whether to save the current file before running.",
					"scope": "resource"
				},
				"pos.smartParentIncludes": {
					"type": "boolean",
					"default": true,
					"description": "Whether to allow smart mode for the included files from the parent file.\nAfter change mode need reload VSCode IDE.",
					"scope": "resource"
				},
				"pos.smartPreprocessorJS": {
					"type": "boolean",
					"default": false,
					"description": "Whether to allow file processing using a PreprocessorJS based on the JavaScript engine.",
					"scope": "resource"
				},
				"pos.showHelpSignature": {
					"type": "boolean",
					"default": true,
					"description": "Whether to show help the signature procedures (from the comment from above).",
					"scope": "resource"
				},
				"pos.outline.showRegisters": {
					"type": "boolean",
					"default": false,
					"description": "Whether to show registers of device.",
					"scope": "resource"
				},
				"pos.outline.showInRoot": {
					"type": "string",
					"default": "",
					"description": "Whether to show elements at the root of the tree. (example 'Procedures, Variables')",
					"scope": "resource"
				},
				"pos.viewColumnASM": {
					"type": "string",
					"enum": [
						"Beside",
						"Active",
						"One",
						"Two"
					],
					"default": "Beside",
					"description": "Denotes a location of an editor in the window.",
					"scope": "resource"
				},
				"pos.x.DEBUG": {
					"type": "boolean",
					"default": false,
					"description": "Whether to show debug information of extension.",
					"scope": "resource"
				}
			}
		},
		"configurationDefaults": {
			"[pos]": {
				"editor.semanticHighlighting.enabled": true,
				"editor.bracketPairColorization.enabled": false
			}
		},
		"languages": [
			{
				"id": "pos",
				"aliases": [
					"Positron",
					"pos"
				],
				"extensions": [
					".bas",
					".inc",
					".asm",
					".lst"
				],
				"configuration": "./syntaxes/language-configuration.json"
			},
			{
				"id": "pos-output",
				"mimetypes": [
					"text/x-code-output",
					"x-code-output"
				]
			}
		],
		"grammars": [
			{
				"language": "pos",
				"scopeName": "source.pos",
				"path": "./syntaxes/pos.tmLanguage.json",
				"embeddedLanguages": { "source.js": "javascript" }
			},
			{
				"language": "pos-output",
				"scopeName": "output.pos",
				"path": "./syntaxes/output.tmLanguage"
			}
		],
		"snippets": [
			{
				"language": "pos",
				"path": "./snippets/pos.json"
			}
		]
	},
	"scripts": {
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/langmf/atomix.positron"
	},
	"__metadata": {
		"id": "f7b9bcd1-74aa-4e18-a468-9f642dec6e79",
		"publisherId": "a5f9d6ad-aff7-4a8f-b985-bb583834ab8e",
		"publisherDisplayName": "atomix"
	},
	"dependencies": {
		"win-version-info": "^6.0.1"
	}
}
