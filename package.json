{
	"name": "positron",
	"displayName": "Positron",
	"description": "Positron Language Support",
	"version": "1.2.5",
	"publisher": "atomix",
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.60.0"
	},
    "keywords": [
        "pic", "dspic", "pic24", "pic18", "pic16", "pic12", "microchip", "positron", "proton"
    ],
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"activationEvents": [
		"onLanguage:pos",
		"onWebviewPanel:posweb_Settings",
		"onWebviewPanel:posweb_Plugins",
        "onWebviewPanel:posweb_Programs",
		"onWebviewPanel:posweb_About"
	],
	"main": "./dist/extension",
	"contributes": {
		"commands": [
			{
				"command": "pos.runCompile",
				"title": "Compile",
				"icon": {
					"light": "./images/compile_light.svg",
					"dark": "./images/compile_dark.svg"
				}
			},
			{
				"command": "pos.runCombine",
				"title": "Compile and Program",
				"icon": {
					"light": "./images/combine_light.svg",
					"dark": "./images/combine_dark.svg"
				}
			},
			{
				"command": "pos.runProgram",
				"title": "Program",
				"icon": {
					"light": "./images/download_light.svg",
					"dark": "./images/download_dark.svg"
				}
			},
			{
				"command": "pos.viewAsm",
				"title": "View Assembler"
			},
			{
				"command": "pos.viewLst",
				"title": "View Listing"
			},
			{
				"command": "pos.stopCompile",
				"title": "Stop Compile"
			},
			{
				"command": "pos.webSettings",
				"title": "Settings"
			},
			{
				"command": "pos.webPlugins",
				"title": "Plugins"
			},
			{
				"command": "pos.webPrograms",
				"title": "Programs"
			},
			{
				"command": "pos.webAbout",
				"title": "About"
			}
		],
		"keybindings": [
			{
				"command": "pos.runCompile",
				"key": "ctrl+alt+c"
			},
			{
				"command": "pos.runCombine",
				"key": "ctrl+alt+m"
			},
			{
				"command": "pos.runProgram",
				"key": "ctrl+alt+p"
			},
			{
				"command": "pos.viewAsm",
				"key": "ctrl+alt+a"
			},
			{
				"command": "pos.viewLst",
				"key": "ctrl+alt+l"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "resourceLangId == pos && config.pos.showCompileInContextMenu",
					"command": "pos.runCompile",
					"group": "navigation"
				},
				{
					"when": "resourceLangId == pos && config.pos.showCompileInContextMenu",
					"command": "pos.runCombine",
					"group": "navigation"
				},
				{
					"when": "resourceLangId == pos && config.pos.showCompileInContextMenu",
					"command": "pos.runProgram",
					"group": "navigation"
				},
				{
					"when": "resourceLangId == pos && config.pos.showViewInContextMenu",
					"command": "pos.viewAsm",
					"group": "navigation"
				},
				{
					"when": "resourceLangId == pos && config.pos.showViewInContextMenu",
					"command": "pos.viewLst",
					"group": "navigation"
				}
			],
			"editor/title": [
				{
					"when": "resourceLangId == pos && config.pos.showIconsInTitleMenu",
					"command": "pos.runCompile",
					"group": "navigation@1"
				},
				{
					"when": "resourceLangId == pos && config.pos.showIconsInTitleMenu",
					"command": "pos.runCombine",
					"group": "navigation@1"
				},
				{
					"when": "resourceLangId == pos && config.pos.showIconsInTitleMenu",
					"command": "pos.runProgram",
					"group": "navigation@1"
				},
				{
					"when": "resourceLangId == pos && config.pos.showIconsInTitleMenu",
					"submenu": "pos.positron",
					"group": "navigation@2"
				}
			],
			"pos.positron": [
				{
					"command": "pos.webSettings",
					"group": "positron@1"
				},
				{
					"when": "config.pos.x.DEBUG",
                    "command": "pos.webPlugins",
					"group": "positron@2"
				},
                {
					"command": "pos.webPrograms",
					"group": "positron@2"
				},
				{
					"command": "pos.webAbout",
					"group": "positron@9"
				}
			]
		},
		"submenus": [
			{
				"id": "pos.positron",
				"label": "Positron",
				"icon": {
					"light": "./images/settings_light.svg",
					"dark": "./images/settings_dark.svg"
				}
			}
		],
		"configuration": {
			"type": "object",
			"title": "Positron",
			"properties": {
				"pos.main.compiler": {
					"type": "string",
					"default": "C:\\Program Files (x86)\\ProtonIDE\\PDS\\Loader.exe",
					"description": "Path to loader for positron compiler"
				},
				"pos.main.programmer": {
					"type": "string",
					"default": "C:\\Program Files (x86)\\Microchip\\Pickit 2 v2\\pk2cmd.exe",
					"description": "Path to programmer for program Flash-based PICÂ® Microcontroller Units"
				},
				"pos.main.programmerArgs": {
					"type": "string",
					"default": "-L1 -H1 -R -J -E -M -PPIC$target-device$ -F$hex-filename$ -B$exe-path$",
					"description": "Arguments for programmer"
				},
				"pos.main.includeDirs": {
					"type": "array",
					"uniqueItems": true,
					"items": {
						"type": "string"
					},
					"default": [],
					"description": "Custom directories with files for include statement"
				},
				"pos.output.ClickHide": {
					"type": "boolean",
					"default": false,
					"description": "Hide the panel (output, terminal, etc.) when the user clicks into a text editor."
				},
				"pos.output.DelayHide": {
					"type": "number",
					"default": 0,
					"description": "How long to wait (ms.) before hiding the panel."
				},
				"pos.timeout.AutoFormat": {
					"type": "number",
					"default": 1000,
					"description": "How long to wait (ms.) before auto-formatting text. (The value 0 disables this feature)"
				},
				"pos.showCompileInContextMenu": {
					"type": "boolean",
					"default": true,
					"description": "Whether to show items (Compile, Program) in editor context menu.",
					"scope": "resource"
				},
				"pos.showViewInContextMenu": {
					"type": "boolean",
					"default": true,
					"description": "Whether to show items (View Asm, View Lst) in editor context menu.",
					"scope": "resource"
				},
				"pos.showIconsInTitleMenu": {
					"type": "boolean",
					"default": true,
					"description": "Whether to show icons in editor title menu.",
					"scope": "resource"
				},
				"pos.saveAllFilesBeforeRun": {
					"type": "boolean",
					"default": true,
					"description": "Whether to save all files before running.",
					"scope": "resource"
				},
				"pos.saveFileBeforeRun": {
					"type": "boolean",
					"default": true,
					"description": "Whether to save the current file before running.",
					"scope": "resource"
				},
				"pos.smartParentIncludes": {
					"type": "boolean",
					"default": true,
					"description": "Whether to allow smart mode for the included files from the parent file.\nAfter change mode need reload VSCode IDE.\t! This is experimental feature !",
					"scope": "resource"
				},
				"pos.outline.showRegisters": {
					"type": "boolean",
					"default": true,
					"description": "Whether to show registers of device.",
					"scope": "resource"
				},
				"pos.outline.showInRoot": {
					"type": "string",
					"default": "",
					"description": "Whether to show elements at the root of the tree. (example 'Procedures, Variables')",
					"scope": "resource"
				},
                "pos.x.DEBUG": {
					"type": "boolean",
					"default": false,
					"description": "Whether to show debug information of extension.",
					"scope": "resource"
				}
			}
		},
		"configurationDefaults": {
			"[pos]": {
				"editor.semanticHighlighting.enabled": true,
				"editor.snippetSuggestions": "top"
			}
		},
		"languages": [
			{
				"id": "pos",
				"aliases": [
					"Positron",
					"pos"
				],
				"extensions": [
					".bas",
					".inc",
					".asm",
					".lst"
				],
				"configuration": "./syntaxes/language-configuration.json"
			},
			{
				"id": "pos-output",
				"mimetypes": [
					"text/x-code-output",
					"x-code-output"
				]
			}
		],
		"grammars": [
			{
				"language": "pos",
				"scopeName": "source.pos",
				"path": "./syntaxes/pos.tmLanguage.json"
			},
			{
				"language": "pos-output",
				"scopeName": "output.pos",
				"path": "./syntaxes/output.tmLanguage"
			}
		],
		"snippets": [
			{
				"language": "pos",
				"path": "./snippets/pos.json"
			}
		]
	},
	"scripts": {
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/langmf/atomix.positron"
	},
	"__metadata": {
		"id": "f7b9bcd1-74aa-4e18-a468-9f642dec6e79",
		"publisherId": "a5f9d6ad-aff7-4a8f-b985-bb583834ab8e",
		"publisherDisplayName": "atomix"
	},
	"dependencies": {
		"win-version-info": "^5.0.1"
	}
}
