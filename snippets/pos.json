{
	"New Proc": {
		"prefix": "Proc",
		"body": [
			"Proc ${1:Name}($2)",
				"\t$0",
			"EndProc"
		],
        "description": "new proc...",
	},
    
	"New Sub": {
		"prefix": "Sub",
		"body": [
			"Sub ${1:Name}()",
				"\t$0",
			"EndSub"
		],
        "description": "new sub...",
	},

	"If Statement": {
		"prefix": "If ",
		"body": [
			"If ${1:True} Then $0"
		],
        "description": "Single-line If statement",
	},
    
	"If Block": {
		"prefix": "If ",
		"body": [
			"If ${1:True} Then",
				"\t$0",
			"EndIf"
		],
        "description": "Multi-line If block",
	},

	"If Else Block": {
		"prefix": "If Else",
		"body": [
			"If ${1:True} Then",
				"\t$0${2:",
			"Else",
				"\t}",
			"EndIf"
		],
        "description": "Multi-line If Else block",
	},

	"ElseIf Statement": {
		"prefix": "ElseIf",
		"body": [
			"ElseIf ${1:True} Then",
				"\t$0"
		],
        "description": "elseif...",
	},

	"Else Statement": {
		"prefix": "Else",
		"body": [
			"Else",
				"\t${0:True}"
		],
        "description": "else...",
	},
    
	"Select Case": {
		"prefix": "Select Case",
		"body": [
			"Select Case ${1:statement}",
				"\tCase ${2}",
				"\t\t${3}",
				"\tCase Else",
				"\t\t${4}",
			"EndSelect"
		],
        "description": "select case...",
	},

	"For Next": {
		"prefix": "For Next",
		"body": [
			"For ${1:i} = 0 To ${2:value}",
				"\t$0",
			"Next"
		],
        "description": "for... next",
	},

	"For Step": {
		"prefix": "For Step",
		"body": [
			"For ${1:i} = 0 To ${2:value} Step ${3:value}",
				"\t$0",
			"Next"
		],
        "description": "for... step",
	},
    
	"Do Loop Until": {
		"prefix": "Do Until",
		"body": [
			"Do",
				"\t$0",
			"Loop Until ${1:statement}"
		],
        "description": "do loop until",
	},

	"Do Loop While": {
		"prefix": "Do While",
		"body": [
			"Do",
				"\t$0",
			"Loop While ${1:statement}"
		],
        "description": "do loop while",
	},

	"Repeat Until": {
		"prefix": "Repeat",
		"body": [
			"Repeat",
				"\t$0",
			"Until ${1:statement}"
		],
        "description": "repeat until",
	},
    
    "While Wend": {
		"prefix": "While",
		"body": [
			"While ${1:statement}",
				"\t$0",
			"Wend"
		],
        "description": "while wend",
	}
}
